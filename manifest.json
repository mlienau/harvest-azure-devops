{
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "js/forwarding.js",
                "js/profiles/azure-devops.js"
            ],
            "matches": [
                "https://*.visualstudio.com/*",
                "https://dev.azure.com/*"
            ]
        }
    ],
    "content_security_policy": {
        "extension_page": "script-src 'self' https://*.harvestapp.com https://*.harvestapp.dev; object-src 'self'"
    },
    "description": "Track time from Chrome for Azure DevOps projects.",
    "icons": {
        "128": "images/h-app@128px.png",
        "16": "images/h-app@16px.png",
        "48": "images/h-app@48px.png"
    },
    "manifest_version": 3,
    "name": "Harvest - Azure DevOps",
    "permissions": [
        "cookies",
        "webRequest",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*.visualstudio.com/*",
        "https://dev.azure.com/*"
    ],
    "version": "1.2",
    "web_accessible_resources": [{
        "resources": ["images/trello-timer-icon.png"],
        "matches": [
            "https://*.visualstudio.com/*",
            "https://dev.azure.com/*"
        ]
    }],
    "action": {
        "default_icon": {
            "19": "images/h-toolbar-off@19px.png",
            "38": "images/h-toolbar-off@38px.png"
        },
        "default_title": "Harvest - Azure DevOps"
    }
}